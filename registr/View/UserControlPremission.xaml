<UserControl x:Class="registr.View.UserControlPremission"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:registr.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" ColumnHeaderHeight="30" Width="220" AutoGenerateColumns="False"  Margin="5" ItemsSource="{Binding CollectionPermissionViewModels}">
            <DataGrid.Columns>
                <DataGridTextColumn  IsReadOnly="True" Binding="{Binding Mode}" Header="Название модуля"/>
                <DataGridTextColumn Binding="{Binding Mode}"  Header="Уровень доступа" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
