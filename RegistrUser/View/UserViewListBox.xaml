<Window x:Class="RegistrUser.View.UserView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegistrUser.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Text="{Binding Path=LastName}" />
            <TextBlock Text="{Binding Path=FirsName}" />
            <TextBlock Text="{Binding Path=MidleName}" />
            <TextBlock Text="{Binding Path=TranslateGender}" />
            <TextBlock Text="{Binding Path=TransletedBlocked}" />
        </StackPanel>
        <Image HorizontalAlignment="Right" Grid.Column="1" Height="80" Source="{Binding Path=Photo}" />
    </Grid>
</Window>
